---
interface Props {
  title: string;
  description: string;
  mapEmbedUrl?: string;
}

const {
  title,
  description,
  mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10902.066245036466!2d7.350256150000001!3d47.1709748!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478e1e82d5c1df91%3A0xbf92c31e7d992581!2sLengnau%20BE!5e0!3m2!1sen!2sch!4v1714908545169!5m2!1sen!2sch",
} = Astro.props;
---

<section class="py-32 px-4 bg-off-white relative" id="location">
  <div class="absolute inset-0 bg-gold-gradient opacity-30 z-0"></div>
  <div
    class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center relative z-10"
  >
    <div class="lg:pr-8">
      <div class="mb-4">
        <span class="uppercase text-gold text-xs tracking-widest font-medium"
          >Premium Standort</span
        >
      </div>
      <h2
        class="text-4xl md:text-5xl text-gray-800 mb-6 relative font-playfair font-semibold"
      >
        {title}
      </h2>
      <div class="w-20 h-0.5 bg-gold mb-10 opacity-70"></div>
      <div
        class="text-gray-600 leading-relaxed font-light text-lg mb-14"
        set:html={description}
      />
      <div class="flex flex-col gap-8">
        <div class="flex items-start gap-5 group">
          <div
            class="bg-gold/10 text-gold w-14 h-14 rounded-sm flex items-center justify-center text-xl flex-shrink-0 transition-all duration-300 shadow-sm group-hover:bg-gold group-hover:text-white transform group-hover:-translate-y-1"
          >
            <i class="fas fa-car"></i>
          </div>
          <div>
            <h4
              class="text-xl text-gray-800 mb-3 font-playfair font-semibold transition-colors group-hover:text-gold"
            >
              Verkehrsanbindung
            </h4>
            <p class="text-gray-600 text-base leading-relaxed font-light">
              Exzellente Anbindung an öffentliche Verkehrsmittel und Autobahn
            </p>
          </div>
        </div>
        <div class="flex items-start gap-5 group">
          <div
            class="bg-gold/10 text-gold w-14 h-14 rounded-sm flex items-center justify-center text-xl flex-shrink-0 transition-all duration-300 shadow-sm group-hover:bg-gold group-hover:text-white transform group-hover:-translate-y-1"
          >
            <i class="fas fa-shopping-bag"></i>
          </div>
          <div>
            <h4
              class="text-xl text-gray-800 mb-3 font-playfair font-semibold transition-colors group-hover:text-gold"
            >
              Einkauf und Versorgung
            </h4>
            <p class="text-gray-600 text-base leading-relaxed font-light">
              Alle Geschäfte des täglichen Bedarfs in unmittelbarer Nähe
            </p>
          </div>
        </div>
        <div class="flex items-start gap-5 group">
          <div
            class="bg-gold/10 text-gold w-14 h-14 rounded-sm flex items-center justify-center text-xl flex-shrink-0 transition-all duration-300 shadow-sm group-hover:bg-gold group-hover:text-white transform group-hover:-translate-y-1"
          >
            <i class="fas fa-tree"></i>
          </div>
          <div>
            <h4
              class="text-xl text-gray-800 mb-3 font-playfair font-semibold group-hover:text-gold transition-colors"
            >
              Naherholung
            </h4>
            <p class="text-gray-600 text-base leading-relaxed font-light">
              Vielfältige Freizeit- und Erholungsmöglichkeiten in der Umgebung
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="relative">
      <div class="p-2 border border-gold/20 shadow-lg bg-white">
        <iframe
          src={mapEmbedUrl}
          width="100%"
          height="500"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="filter grayscale-[30%]"
        >
        </iframe>
      </div>
    </div>
  </div>
</section>
